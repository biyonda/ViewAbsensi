<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.ProfilFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/main_header2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|start">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Profil Pengguna"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/foto_pengguna"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_ic_photo">
            </ImageView>
            <TextView
                android:id="@+id/nama_pengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="nama_pengguna"
                android:textColor="@color/green_dark"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/no_pegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no_pegawai"
                android:textSize="13sp">
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:weightSum="10">
                    <RelativeLayout
                        android:id="@+id/btn_voucher"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.75">

                        <TextView
                            android:id="@+id/tx_jabatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Bagian"
                            android:textColor="@color/black"></TextView>

                        <ImageView
                            android:id="@+id/ic_jabatan"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/tx_jabatan"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/ic_verified"></ImageView>

                        <TextView
                            android:id="@+id/jabatan_pengguna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_jabatan"
                            android:layout_marginTop="6dp"
                            android:layout_toEndOf="@+id/ic_jabatan"
                            android:text=""
                            android:textColor="@color/green_dark"
                            android:textStyle="bold"></TextView>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center">
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/btn_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.75">

                        <TextView
                            android:id="@+id/tx_shift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Kelompok Shift"
                            android:textColor="@color/black"></TextView>

                        <ImageView
                            android:id="@+id/ic_shift"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/tx_shift"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/ic_person_pin"></ImageView>

                        <TextView
                            android:id="@+id/shift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tx_shift"
                            android:layout_marginTop="6dp"
                            android:layout_toEndOf="@+id/ic_shift"
                            android:text=""
                            android:textColor="@color/green_dark"
                            android:textStyle="bold"></TextView>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/btn_edit"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_yellow_round">

        <ImageView
            android:id="@+id/ic_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/nav_ic_profil_on">
        </ImageView>

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/ic_edit"
            android:text="Ubah Data Pengguna"
            android:textColor="#CE3032"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/ic_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_arrow_right">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bt_red_round">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="Keluar"
            android:textColor="#CE3032"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_logout">
        </ImageView>
    </RelativeLayout>

</LinearLayout>